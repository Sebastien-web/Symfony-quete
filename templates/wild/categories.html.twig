{% extends 'base.html.twig' %}

{% block body %}
    <h1>Voici la liste des catégrories disponibles :</h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }} </h2>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}
{% endblock %}
